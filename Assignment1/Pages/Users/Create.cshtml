@page
@model Assignment1.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Users page";
    ViewData["location"] = "Users";
}

<br />
<h2>New User</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Username</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="user_name" value="@Model.user.user_name" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.user.email" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Employee No</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="employee_number" value="@Model.user.employee_number" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Age</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="age" value="@Model.user.age" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Dept ID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="dept_id" value="@Model.user.dept_id" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="active">
            Active
        </label>
        <div class="col-sm-6">
            <input class="form-check-input align-middle" type="checkbox" name="active" id="active" checked>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" name="password" value="" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>@Model.successMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Users" role="button">Cancel</a>
        </div>
    </div>
</form>